{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES5",
      "ES6",
      "ES2020",
      "ESNext.AsyncIterable"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true
}